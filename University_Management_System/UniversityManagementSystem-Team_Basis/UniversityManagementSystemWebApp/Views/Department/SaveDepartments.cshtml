@model UniversityManagementSystemWebApp.Models.Department

@{
    //    Layout = null;
    ViewBag.Title = "Save New Department";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}


@using (Html.BeginForm("SaveDepartments", "Department", FormMethod.Post, new { id = "saveDepartmentForm", @class = "form-horizontal  main-center" }))
{
    <div class="form-group">
        <h2>Save New Department</h2>
    </div>
    <hr/>
     

    <div class="form-group">

        <label for="Code" class="cols-sm-2 control-label">Department Code</label>

        <div class="input-group-addon">
            @Html.TextBoxFor(x => x.Code, new { @class = "form-control", placeholder = "Enter Department Code" })
        </div>
        <div class="input-group">
            @Html.ValidationMessageFor(x => x.Code, null, new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">

        <label for="Name" class="cols-sm-2 control-label">Department Name</label>

        <div class="input-group-addon">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Enter Department name" })
        </div>
        <div class="input-group">
            @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group control-label" >
        <button class="btn btn-success input-group" type="submit" >Save</button>
    </div>
    if (ViewBag.Message != null)
    {
        <div>
            <label>@ViewBag.Message</label>
            <br />
        </div>

    }



}


